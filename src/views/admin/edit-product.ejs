<%- include("../includes/head") %> <%- include("../includes/midle") %>
<%-include("../includes/navbar") %>
<div class="mt-6">
  <div
    class="border-2 border-purple-500 shadow-lg box-border p-3 max-w-[610px] rounded-lg m-auto"
  >
    <form
      action="/admin/products/edit/<%=ID%>"
      method="POST"
      class="max-w-[600px]"
    >
      <div class="max-w-3xl">
        <label for="title">Title :</label>
        <input
          class="my-input p-1"
          type="text"
          name="title"
          id="title"
          value="<%= title %>"
          disabled
        />
      </div>
      <div class="max-w-3xl">
        <label for="imgurl">Image Url :</label>
        <input
          class="my-input p-1"
          type="text"
          name="imageurl"
          id="imageurl"
          value="<%=imageurl%>"
          disabled
        />
      </div>
      <div class="max-w-3xl">
        <label for="price">Price :</label>
        <input
          step="0.01"
          class="my-input p-1"
          value="<%=price%>"
          type="number"
          name="price"
          id="price"
        />
      </div>
      <div class="max-w-3xl">
        <label for="description">Description :</label>
        <textarea
          class="my-input h-[6rem] p-1"
          rows="10"
          cols="15"
          type="text"
          name="description"
          id="description"
          value="<%=description%>"
          disabled
        ></textarea>
      </div>
      <div class="flex flex-col items-center justify-center mt-3">
        <button type="submit" class="btn">Edit product</button>
      </div>
      <!--        </div>-->
    </form>
  </div>
</div>
<script type="text/javascript">
  document.getElementById("description").value = "<%=description%>";
</script>
<%- include("../includes/end") %>
